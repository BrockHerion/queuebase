{
	"name": "queuebase",
	"version": "0.0.13",
	"license": "MIT",
	"type": "module",
	"description": "Background job processing for Next.js",
	"author": "Brock Herion",
	"scripts": {
		"dev": "bunchee -w --tsconfig tsconfig.build.json",
		"build": "bunchee --tsconfig tsconfig.build.json",
		"publish": "pnpm build && npm publish --access public"
	},
	"exports": {
		"./package.json": "./package.json",
		"./server": {
			"import": {
				"types": "./dist/server/index.d.ts",
				"default": "./dist/server/index.js"
			},
			"require": {
				"types": "./dist/server/index.d.cts",
				"default": "./dist/server/index.cjs"
			}
		},
		"./next": {
			"import": {
				"types": "./dist/next/index.d.ts",
				"default": "./dist/next/index.js"
			},
			"require": {
				"types": "./dist/next/index.d.cts",
				"default": "./dist/next/index.cjs"
			}
		},
		"./client": {
			"import": {
				"types": "./dist/client/index.d.ts",
				"default": "./dist/client/index.js"
			},
			"require": {
				"types": "./dist/client/index.d.cts",
				"default": "./dist/client/index.cjs"
			}
		},
		"./constants": {
			"import": {
				"types": "./dist/constants/index.d.ts",
				"default": "./dist/constants/index.js"
			},
			"require": {
				"types": "./dist/client/index.d.cts",
				"default": "./dist/client/index.cjs"
			}
		},
		"./lib/types": {
			"import": {
				"types": "./dist/lib/types.d.ts",
				"default": "./dist/lib/types.js"
			},
			"require": {
				"types": "./dist/lib/types.d.cts",
				"default": "./dist/lib/types.cjs"
			}
		},
		"./api": {
			"import": {
				"types": "./dist/api.d.ts",
				"default": "./dist/api.js"
			},
			"require": {
				"types": "./dist/api.d.cts",
				"default": "./dist/api.cjs"
			}
		},
		"./logger": {
			"import": {
				"types": "./dist/logger.d.ts",
				"default": "./dist/logger.js"
			},
			"require": {
				"types": "./dist/logger.d.cts",
				"default": "./dist/logger.cjs"
			}
		}
	},
	"files": [
		"dist/lib",
		"dist/next",
		"dist/server",
		"dist/client"
	],
	"publishConfig": {
    "access": "public"
  },
	"devDependencies": {
		"@queuebase/eslint": "workspace:*",
		"@queuebase/tsconfig": "workspace:*",
		"bunchee": "^5.1.3",
		"eslint": "^9.1.1",
		"next": "14.2.3",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"std-env": "^3.7.0",
		"tslog": "^4.9.2"
	},
	"peerDependencies": {
		"next": "*"
	},
	"peerDependenciesMeta": {
		"next": {
			"optional": true
		}
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@queuebase/eslint/base"
		],
		"rules": {
			"no-console": "error",
			"no-restricted-globals": [
				"error",
				{
					"name": "fetch",
					"message": "fetch should be passed as parameter to support overriding default behaviors"
				},
				{
					"name": "process",
					"message": "Use `import { process } from 'std-env` instead"
				}
			],
			"no-restricted-imports": [
				"error",
				{
					"patterns": [
						"queuebase",
						"queuebase/*"
					]
				}
			]
		}
	}
}